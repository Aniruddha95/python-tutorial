result2 = math.ceil(3.14)
result3 = math.floor(3.14)

print(result1)
print(result2)
print(result3)

// Exercises

# Exercise 1 : Calculate the circumference of a circle
import math

radius = float(input("Enter the radius of a circle : "))
circumference = 2 * math.pi * radius

print(f"The circumference of circle is {round(circumference, 2)}")

# Exercise 2  : calculate the area of a circle
import math

radius = float(input("Enter the radius of a circle : "))
area = math.pi * pow(radius, 2)

print(f"The area of circle is {round(area, 2)}")

# Exercise 3 : Find the hypotenuse of a triangle
import math

sideA = float(input("Enter side A : "))
sideB = float(input("Enter side B : "))
hypotenuse = math.sqrt(pow(sideA, 2) + pow(sideB, 2))

print(f"The hypotenuse of triangle is {round(hypotenuse, 2)}")

// if statements

# if = Do some code if condition is True else do something else

age = int(input("Enter your age : "))

if age >=60:
    print("You are to old to signup")
elif age >= 18:
    print("You can sign up")
elif age < 0:
    print("Enter valid age")
else:
    print("You are not eligible")

# Second example
