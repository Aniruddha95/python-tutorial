// Calculator Program

num1 = float(input("Enter the first number : "))
num2 = float(input("Enter the second number : "))

operator = input("Enter an operator (+ - * /) : ")

if operator == "+":
    result = num1 + num2
    print(round(result, 2))
elif operator == "-":
    result = num1 - num2
    print(round(result, 2))
elif operator == "*":
    result = num1 * num2
    print(round(result, 2))
elif operator == "/":
    result = num1 / num2
    print(round(result, 2))
else:
    print(f"{operator} is not a valid operator")

// Weight Convertor Program

print("Weight Convertor Program")
print("1. Convert lbs to kgs")
print("2. Convert kgs to lbs")

option = int(input("Choose an option : "))

if option == 1:
    weight = float(input("Enter weight in lbs : "))
    weight = weight * 0.453592
    print(f"The new weight is {round(weight, 1)}kgs")
elif option == 2:
    weight = float(input("Enter weight in kgs : "))
    weight = weight * 2.20462
    print(f"The new weight is {round(weight, 1)}lbs")
else:
    print("Enter valid option")

// Temperature Convertor Program

print("Temperature Convertor Program")
unit = input("Is this temperature in Celsius or Fahrenheit? (C/F) : ")

if unit == "C":
    temp = float(input("Enter the temperature : "))
    temp = (9 * temp) / 5 + 32
    print(f"The temperature in fahrenheit is {round(temp, 1)}")
elif unit == "F":
    temp = float(input("Enter the temperature : "))
    temp = (temp - 32) * 5 / 9
    print(f"The temperature in celsius is {round(temp, 1)}")
else:
    print(f"{unit} is an invalid unit of measurement")

// Logical Operators

# OR
temp = int(input("Enter temperature outside : "))
isRaining = input("Is it raining outside? (True/False) : ").strip() == "True"

if temp > 35 or temp < 0 or isRaining:
    print("The outdoor event is cancelled")
else:
    print("The outdoor event is still scheduled")

# AND
temp = 25
isSunny = True

if temp >= 28 and isSunny:
    print("It is hot outside")
    print("It is sunny")
elif temp <= 0 and isSunny:
    print("It is cold outside")
    print("It is sunny")
elif 28 > temp > 0 and isSunny:
    print("It is warm outside")
    print("It is sunny")

# NOT
temp = 25
isSunny = False

if temp >= 28 and not isSunny:
    print("It is hot outside")
    print("It is cloudy")
elif temp <= 0 and not isSunny:
    print("It is cold outside")
    print("It is cloudy")
elif 28 > temp > 0 and not isSunny:
    print("It is warm outside")
    print("It is cloudy")

// Conditional Expression

# Conditional Expression = A one-line shortcut for if-else statement (ternary operator)
# Print or assign one of two values based on a condition
# X if condition else Y

# Example 1
num = 5

print("Positive" if num > 0 else "Negative")

# Example 2
num = int(input("Enter a number : "))
result = num % 2

print("Even" if result == 0 else "Odd")

# Example 3
a = float(input("Enter first number : "))
b = float(input("Enter second number : "))
max_num = a if a > b else b

print(max_num)

# Example 4
age = int(input("Enter your age : "))
status = "Adult" if age >= 18 else "Child"

print(status)

# Example 5
userType = input("Enter your position (admin/guest) : ")
accessLevel = "Full Access" if userType == "admin" else "Limited Access"

print(accessLevel)

// String Methods

name = "aniruddha"
phone = "+91-0123-456-789"
date = "01-01-2025"

length = len(name)
find = name.find("d") # for first occurrence
reverseFind = name.rfind("d") # for last occurrence
nameCapital = name.capitalize()
nameUpper = name.upper()
nameLower = name.lower()
result1 = name.isdigit() # True if contains only digit
result2 = name.isalpha() # True if contains only alphabets
countFn = phone.count("-")
replaceName = name.replace("d","z")
replaceDate = date.replace("-", "/")
replacePhone = phone.replace("-", "") # replace with empty space

print(length)
print(find)
print(reverseFind)
print(nameCapital)
print(nameUpper)
print(nameLower)
print(result1)
print(result2)
print(countFn)
print(replaceName)
print(replaceDate)
print(replacePhone)

# Exercise
# Validate user input - Less than 12 characters, no space, no digits

username = input("Enter a username : ")

if len(username) > 12:
    print("Username cannot be more than 12 characters")
elif not username.find(" ") == -1:
    print("Username should not contain any spaces")
elif not username.isalpha():
    print("Username should not contain any digit")
else:
    print(f"Welcome {username}!")

